<div class="container border">
    <h1>
        <i class="fas fa-book"></i> Report card</h1>


    <h2>SCORE {{t.metric_correct}} / {{t.totalNumQuestions}}</h2>
    {{#each t.topics as |topic topicIndex|}}
    <h2>{{topic.title}}</h2>
    <hr> {{#each topic.pickedQuestions as |question questionIndex|}}

    <p>{{plusone questionIndex}}. {{question.statement}} {{#if question.isCorrect}}
        <i class="fas fa-check"></i>
        {{else}}
        <i class="fas fa-times-circle"></i>
        {{/if}} [ {{question.time}} Seconds]
    </p>

    {{> test_result/explain topicIndex=topicIndex questionIndex=questionIndex question=question}}

     {{/each}} {{/each}}


    <div class="chart-container" style="position: absolute; height:20vh; width:60vw">
        <canvas id="myChart"></canvas>
    </div>

</div>

{{> test_result/chartscript }}